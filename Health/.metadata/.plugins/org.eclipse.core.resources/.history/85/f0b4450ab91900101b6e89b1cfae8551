package controller;



import java.io.IOException;
import jakarta.servlet.ServletException;
import jakarta.servlet.annotation.WebServlet;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;
import jakarta.servlet.http.HttpSession;
import model.User;;

@WebServlet("/DashboardServlet")
public class DashboardServlet extends HttpServlet {
	
	
	public void init() throws ServletException {
	    System.out.println(getClass().getSimpleName() + " initialized");
	}
	
	
    private static final long serialVersionUID = 1L;
    
    protected void doGet(HttpServletRequest request, HttpServletResponse response) 
            throws ServletException, IOException {
        
        HttpSession session = request.getSession(false);
        if (session == null || session.getAttribute("user") == null) {
            response.sendRedirect(request.getContextPath() + "/login.jsp");
            return;
        }
        
        // Get user from session
        User user = (User) session.getAttribute("user");
        
        // Determine dashboard based on role
        String dashboardPage;
        switch(user.getRole()) {
            case "admin":
                dashboardPage = "/adminDashboard.jsp";
                break;
            case "doctor":
                dashboardPage = "/doctorDashboard.jsp";
                break;
            case "patient":
                dashboardPage = "/patientDashboard.jsp";
                break;
            default:
                dashboardPage = "/error.jsp";
        }
        
        // Forward to the appropriate dashboard
        request.getRequestDispatcher(dashboardPage).forward(request, response);
    }
}