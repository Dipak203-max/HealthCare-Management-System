<body>
    <div class="dashboard-container">
        <!-- Header -->
        <header class="header">
            <h1 class="header-title">Doctor Dashboard</h1>
            <div class="user-info">
                <span class="user-greeting">Welcome, Dr. <strong>${user.username}</strong></span>
                <form action="${pageContext.request.contextPath}/LogoutServlet" method="post" class="form-inline">
                    <button type="submit" class="logout-btn">Logout</button>
                </form>
            </div>
        </header>

        <!-- Navigation Bar -->
        <nav class="nav-bar">
            <a href="${pageContext.request.contextPath}/DashboardServlet" 
               class="nav-link ${activePage == 'dashboard' ? 'active' : ''}">
                <span>Dashboard</span>
            </a>
            <a href="${pageContext.request.contextPath}/DoctorAppointmentsServlet" 
               class="nav-link ${activePage == 'appointments' ? 'active' : ''}">
                <span>My Appointments</span>
            </a>
            <a href="${pageContext.request.contextPath}/PatientRecordsServlet" 
               class="nav-link ${activePage == 'records' ? 'active' : ''}">
                <span>Patient Records</span>
            </a>
            <a href="${pageContext.request.contextPath}/DoctorScheduleServlet" 
               class="nav-link ${activePage == 'schedule' ? 'active' : ''}">
                <span>Schedule</span>
            </a>
            <a href="${pageContext.request.contextPath}/UserSettingsServlet" 
               class="nav-link">
                <span>Settings</span>
            </a>
        </nav>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Display messages -->
            <c:if test="${not empty message}">
                <div class="message message-success">${message}</div>
            </c:if>
            <c:if test="${not empty error}">
                <div class="message message-error">${error}</div>
            </c:if>

            <!-- Today's Appointments Card -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Today's Appointments</h3>
                    <span class="appointments-count">${todaysAppointments}</span>
                </div>

                <div class="card-body">
                    <table class="appointments-table">
                        <thead>
                            <tr>
                                <th>Time</th>
                                <th>Patient</th>
                                <th>Date</th>
                                <th>Specialization</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <c:forEach var="appointment" items="${doctorAppointments}">
                                <tr>
                                    <td><fmt:formatDate value="${appointment.time}" pattern="hh:mm a" /></td>
                                    <td>${appointment.patientName}</td>
                                    <td><fmt:formatDate value="${appointment.date}" pattern="yyyy-MM-dd" /></td>
                                    <td class="specialization">${appointment.specialization}</td>
                                    <td>
                                        <span class="status status-${appointment.status.toLowerCase()}">
                                            ${appointment.status}
                                        </span>
                                    </td>
                                    <td>
                                        <c:if test="${appointment.status == 'SCHEDULED'}">
                                            <form action="${pageContext.request.contextPath}/UpdateAppointmentStatusServlet"
                                                method="post" class="form-inline">
                                                <input type="hidden" name="appointmentId"
                                                    value="${appointment.appointmentId}">
                                                <input type="hidden" name="status" value="COMPLETED">
                                                <button type="submit" class="action-btn complete-btn">Complete</button>
                                            </form>
                                            <form action="${pageContext.request.contextPath}/UpdateAppointmentStatusServlet"
                                                method="post" class="form-inline">
                                                <input type="hidden" name="appointmentId"
                                                    value="${appointment.appointmentId}">
                                                <input type="hidden" name="status" value="CANCELLED">
                                                <button type="submit" class="action-btn cancel-btn">Cancel</button>
                                            </form>
                                        </c:if>
                                        <form action="${pageContext.request.contextPath}/view/addMedicalRecord.jsp"
                                            method="get" class="form-inline">
                                            <input type="hidden" name="appointmentId"
                                                value="${appointment.appointmentId}">
                                            <input type="hidden" name="patientId"
                                                value="${appointment.patientId}">
                                            <button type="submit" class="action-btn add-record-btn">Add Record</button>
                                        </form>
                                    </td>
                                </tr>
                            </c:forEach>
                        </tbody>
                    </table>
                </div>
            </div>
        </main>

        <!-- Footer -->
        <footer class="footer">
            <div class="footer-content">
                <div class="footer-links">
