	<script>
    function confirmDelete(doctorId) {
        if (confirm('Are you sure you want to delete this doctor? This will also delete all their appointments and medical records.')) {
            document.getElementById('deleteForm-' + doctorId).submit();
        }
        return false;
    }
</script>
