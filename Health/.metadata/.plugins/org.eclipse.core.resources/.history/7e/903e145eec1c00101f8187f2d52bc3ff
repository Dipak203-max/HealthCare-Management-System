                <div class="user-info">
                    <span>Welcome, Dr. <strong>${user.username}</strong></span>
                    <form action="${pageContext.request.contextPath}/LogoutServlet" method="post" class="form-inline">
                        <button type="submit" class="logout-btn">Logout</button>
                    </form>
                </div>
            </header>

            <!-- Display messages -->
            <c:if test="${not empty message}">
                <div class="message message-success">${message}</div>
            </c:if>
            <c:if test="${not empty error}">
                <div class="message message-error">${error}</div>
            </c:if>

            <!-- All Appointments Card -->
            <div class="card">
                <div class="card-header">
                    <span class="card-title">All My Appointments</span>
                </div>

                <div class="card-body">
                    <table class="appointments-table">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Time</th>
                                <th>Patient</th>
                                <th>Phone</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <c:forEach var="appointment" items="${appointments}">
                                <tr>
                                    <td><fmt:formatDate value="${appointment.date}" pattern="yyyy-MM-dd" /></td>
                                    <td><fmt:formatDate value="${appointment.time}" pattern="hh:mm a" /></td>
                                    <td>${appointment.patientName}</td>
                                    <td>${appointment.patientPhone}</td>
                                    <td class="status status-${appointment.status.toLowerCase()}">
                                        ${appointment.status}
                                    </td>
                                    <td>
                                        <c:if test="${appointment.status == 'SCHEDULED'}">
                                            <form action="${pageContext.request.contextPath}/UpdateAppointmentStatusServlet"
                                                method="post" class="form-inline">
                                                <input type="hidden" name="appointmentId" value="${appointment.appointmentId}">
                                                <input type="hidden" name="status" value="COMPLETED">
                                                <button type="submit" class="action-btn complete-btn">Complete</button>
                                            </form>
                                            <form action="${pageContext.request.contextPath}/UpdateAppointmentStatusServlet"
                                                method="post" class="form-inline">
                                                <input type="hidden" name="appointmentId" value="${appointment.appointmentId}">
                                                <input type="hidden" name="status" value="CANCELLED">
                                                <button type="submit" class="action-btn cancel-btn">Cancel</button>
                                            </form>
                                        </c:if>
                                        <form action="${pageContext.request.contextPath}/view/addMedicalRecord.jsp"
                                            method="get" class="form-inline">
                                            <input type="hidden" name="appointmentId" value="${appointment.appointmentId}">
                                            <input type="hidden" name="patientId" value="${appointment.patientId}">
                                            <button type="submit" class="action-btn add-record-btn">Add Record</button>
                                        </form>
                                    </td>
                                </tr>
                            </c:forEach>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
