        <span>Patient Records</span>
    </a>
               
                <a href="${pageContext.request.contextPath}/DoctorScheduleServlet" 
       class="nav-link ${activePage == 'schedule' ? 'active' : ''}">
        <span>Schedule</span>
    </a>
                <a href="${pageContext.request.contextPath}/UserSettingsServlet" 
                   class="nav-link">
                    <span>Settings</span>
                </a>
            </nav>
        </div>

        <!-- Main Content -->
